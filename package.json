{
  "name": "pocketdragon",
  "private": true,
  "version": "0.0.0-development",
  "description": "The companion app for the boardgame PocketDragon",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "stencil build --prerender",
    "dev": "sd concurrent \"stencil build --dev --watch\" \"stencil-dev-server\" ",
    "serve": "stencil-dev-server",
    "start": "npm run dev",
    "test": "jest",
    "test.watch": "jest --watch",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@stencil/core": "^0.9.11",
    "@stencil/router": "^0.2.2"
  },
  "devDependencies": {
    "@stencil/dev-server": "latest",
    "@stencil/utils": "latest",
    "@types/jest": "^21.1.1",
    "jest": "^21.2.1",
    "semantic-release": "^15.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/playtest-hq/pocketdragon.git"
  },
  "author": "Adrian Schmidt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/playtest-hq/pocketdragon"
  },
  "homepage": "https://github.com/playtest-hq/pocketdragon",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
